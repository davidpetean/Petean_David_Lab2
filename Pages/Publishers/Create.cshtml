        <input type="submit" value="Create" class="btn btn-success" />
    </div>
</form>

<div class="mt-2">
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

