@model Petean_David_Lab2.Pages.Publishers.CreateModel

@{
    ViewData["Title"] = "Create Publisher";
}

<h1>Create Publisher</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Publisher.PublisherName" class="control-label"></label>
        <input asp-for="Publisher.PublisherName" class="form-control" />
